<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AstroWeather" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

    </style>

    <style name="AppTheme.CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:color">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.AstroWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">

        <item name="colorSwitchThumbNormal">@color/cyan</item>
        <item name="colorControlActivated">@color/cyan</item>
        <item name="android:colorForeground">@color/cyan</item>
    </style>
    <style name="Theme.AstroWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AstroWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.invisibleButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>